@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Contacts";
}
<!-- Link to add new contact. -->
<a href="@Url.Action("AddEdit", "Contacts")">Add Contact</a>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        <!-- Displays all contacts in Model. -->
        @foreach (var contact in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Details", "Contacts", new { id = contact.contactId })">
                        @contact.firstName
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Details", "Contacts", new { id = contact.contactId })">
                        @contact.lastName
                    </a>
                </td>
                <td>@contact.phoneNumber</td>
                <td>@contact.email</td>
                <td>@contact.Category.name</td>
            </tr>
        }
    </tbody>
</table>
